<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset
		name="event_list_toolbar"
		label="COM_RANKINGS_DETAILS"
		addfieldpath="/components/com_rankings/models/fields"
		>
		<field
            name="filter_district_code"
            type="districtlist"
            id="district_code_filter"
            extension="com_rankings"
            label="COM_RANKINGS_DISTRICT"
            onchange="this.form.submit();"
            >
            <option value="All">All</option>
        </field>
        <field
            name="filter_distance"
            type="distancelist"
            id="distance_filter"
            extension="com_rankings"
            label="COM_RANKINGS_EVENT_DISTANCE"
            onchange="this.form.submit();"
            >
            <option value="All">All</option>
        </field>
        <field
            name="filter_year"
            type="yearlist"
            id="year_filter"
            extension="com_rankings"
            label="COM_RANKINGS_EVENT_YEAR"
            onchange="this.form.submit();"
            >
            <option value="All">All</option>
        </field>
        <field
            name="filter_course_code"
            type="courselist"
            id="course_code_filter"
            extension="com_rankings"
            label="COM_RANKINGS_COURSE"
            onchange="this.form.submit();"
            >
            <option value="All">All</option>
        </field>
        <field
        	name="filter_event_name"
        	type="text"
        	id="event_name_filter"
        	extension="com_rankings"
        	label="COM_RANKINGS_EVENT_NAME"
        	hint="COM_RANKINGS_SEARCH_IN_EVENT_NAME"
        	onchange="this.form.submit();"
        	/>
    </fieldset>
</form>